<h1>Categories</h1>
<p>Select a category</p>
<ul>
    <% @categories.each do |c| %>
        <li>
            <%= link_to c.name, category_path(c) %>
            &nbsp;&mdash;&nbsp;<%= link_to 'Edit', edit_category_path(c) %>
            &nbsp;&mdash;&nbsp;<%= link_to 'Delete', category_path(c), method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
    <% end %>
</ul>


<p></p>
<p><%= link_to 'New Category', new_category_path %></p>